#include "common.hlsl_vsh"

struct VS_INPUT 
{
	float4 Position	: POSITION;
	float4 Color	: COLOR;
};

struct VS_OUTPUT
{
	float4 Position	: POSITION;
	float4 Color	: COLOR;
};

VS_OUTPUT Main( VS_INPUT In )
{
	VS_OUTPUT Out;

	Out.Position = FixHalfPixelOffset( mul( In.Position, WVP ) );
	Out.Color = In.Color;
	
	return Out;
}